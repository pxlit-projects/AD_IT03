<Window x:Class="DesktopApplication.AmountThemeQuestions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AmountThemeQuestions" Height="144" Width="304"
        ResizeMode="NoResize">
    <Grid Margin="1,-9,2,2">
        <Label Content="Enter theme name" HorizontalAlignment="Left" Margin="9,19,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="themeTextBox" HorizontalAlignment="Left" Height="24" Margin="136,19,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="146"/>
        <Label Content="Amount of questions" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="amountQuestionsTextBox" HorizontalAlignment="Left" Height="24" Margin="136,47,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="146"/>
        <Button x:Name="generateButton" Content="Generate question field" HorizontalAlignment="Left" Margin="9,76,0,0" VerticalAlignment="Top" Width="272" Height="27" Click="GenerateButton_Click"/>

    </Grid>
</Window>
