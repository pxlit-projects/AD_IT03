<Window x:Class="DesktopApplication.AmountThemeQuestions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AmountThemeQuestions" Height="152.8" Width="304" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="1,-9,2,2">
        <Label Content="Thema titel:" HorizontalAlignment="Left" Margin="9,19,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="themeTextBox" HorizontalAlignment="Left" Height="24" Margin="136,19,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="146"/>
        <Label Content="Aantal vragen:" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="amountQuestionsComboxbox" HorizontalAlignment="Left" Margin="136,49,0,0" VerticalAlignment="Top" Width="145" SelectionChanged="amountQuestionsComboxbox_SelectionChanged"/>
        <Button x:Name="generateButton" Content="Genereer vraag" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="120" Height="30" Click="GenerateButton_Click"/>
        <Button x:Name="cancel" Content="Annuleren" HorizontalAlignment="Right" Margin="0,90,13.6,0" VerticalAlignment="Top" Width="120" Height="30" Click="CancelButton_Click"/>

    </Grid>
</Window>
