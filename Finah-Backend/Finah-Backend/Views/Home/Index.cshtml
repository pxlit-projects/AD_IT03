@section scripts {
    @Scripts.Render("~/bundles/backend")
}

<div class="jumbotron">
    <h1>AppDevIT Project Groep 03</h1>
    <p class="lead">Welkom op de backend server van AppDevIT Project Groep 03</p>
</div>
<div class="page-header">
    <h1>Users</h1>
</div>

<!-- Users -->
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Users</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: user">
                    <li>
                        <strong><span data-bind="text: login"></span></strong>: <span data-bind="text: firstname + ' ' + lastname"></span>
                        <small><a href="#" data-bind="click: $parent.getUserDetail">Details</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- ko if:detail() -->
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">User detail</h2>
            </div>
            <table class="table">
                <tr><td>Login</td><td data-bind="text: detail().login"></td></tr>
                <tr><td>Firstname</td><td data-bind="text: detail().firstname"></td></tr>
                <tr><td>Lastname</td><td data-bind="text: detail().lastname"></td></tr>
                <tr><td>Email</td><td data-bind="text: detail().email"></td></tr>
                <tr><td>Type</td><td data-bind="text: detail().type"></td></tr>
                <tr><td>Street</td><td data-bind="text: detail().street"></td></tr>
                <tr><td>Town</td><td data-bind="text: detail().town"></td></tr>
                <tr><td>Zipcode</td><td data-bind="text: detail().zipcode"></td></tr>
                <tr><td>Birthdate</td><td data-bind="text: detail().birthdate"></td></tr>
            </table>
        </div>
    </div>
    <!-- /ko -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add User</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addUser">

                    <div class="form-group">
                        <label for="inputUsertype" class="col-sm-4 control-label">Usertype</label>
                        <div class="col-sm-8">
                            <select id="inputUsertype" data-bind="options: usertype,
                       optionsText: 'screenname',
                       value: newUser.type,
                       optionsCaption: 'Choose...'"></select>
                        </div>
                    </div>

                    <div class="form-group" data-bind="with: newUser">
                        <label for="inputLogin" class="col-sm-4 control-label">Login</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputLogin" data-bind="value:login" />
                        </div>

                        <label for="inputPassword" class="col-sm-4 control-label">Password</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="inputPassword" data-bind="value:password" />
                        </div>

                        <label for="inputFirstname" class="col-sm-4 control-label">Firstname</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputFirstname" data-bind="value:firstname" />
                        </div>

                        <label for="inputLastname" class="col-sm-4 control-label">Lastname</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputLastname" data-bind="value:lastname" />
                        </div>

                        <label for="inputEmail" class="col-sm-4 control-label">Email</label>
                        <div class="col-sm-8">
                            <input type="text" step="any" class="form-control" id="inputEmail" data-bind="value:email" />
                        </div>

                        <label for="inputStreet" class="col-sm-4 control-label">Street</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputStreet" data-bind="value:street" />
                        </div>

                        <label for="inputTown" class="col-sm-4 control-label">Town</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputTown" data-bind="value:town" />
                        </div>

                        <label for="inputZip" class="col-sm-4 control-label">Zipcode</label>
                        <div class="col-sm-8">
                            <input type="number" step="any" class="form-control" id="inputZip" data-bind="value:zipcode" />
                        </div>

                        <label for="inputBirth" class="col-sm-4 control-label">Birthdate</label>
                        <div class="col-sm-8">
                            <input type="datetime" step="any" class="form-control" id="inputBirth" data-bind="value:birthdate" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="page-header">
    <h1>Usertypes, Answers and Themes</h1>
</div>

<div class="row">
    <!-- Usertypes -->
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Usertypes</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: usertype">
                    <li>
                        <strong><span data-bind="text: screenname"></span></strong>: <span data-bind="text: description"></span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- Answers -->
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Answers</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: answer">
                    <li>
                        <strong><span data-bind="text: number"></span></strong>: <span data-bind="text: title"></span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- Themes -->
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Themes</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: theme">
                    <li>
                        <strong><span data-bind="text: id"></span></strong>: <span data-bind="text: title"></span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>
</div>




<div class="page-header">
    <h1>Questions</h1>
</div>
<!-- Questions -->
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Questions</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: question">
                    <li>
                        <strong><span data-bind="text: title"></span></strong>: <span data-bind="text: theme"></span>
                        <small><a href="#" data-bind="click: $parent.getQuestionDetail">Details</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- ko if:detail() -->
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Question detail</h2>
            </div>
            <table class="table">
                <tr><td>Title</td><td data-bind="text: detail().title"></td></tr>
                <tr><td>Description</td><td data-bind="text: detail().description"></td></tr>
                <tr><td>Theme</td><td data-bind="text: detail().theme"></td></tr>
                <tr><td>Choice</td><td data-bind="text: detail().choice"></td></tr>
            </table>
        </div>
    </div>
    <!-- /ko -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Add Question(Yet to implement!)</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addQuestion">

                    <div class="form-group">
                        <label for="inputThemes" class="col-sm-4 control-label">Themes</label>
                        <div class="col-sm-8">
                            <select id="inputThemes" data-bind="options: theme,
                       optionsText: 'title',
                       value: newQuestion.theme,
                       optionsCaption: 'Choose...'"></select>
                        </div>
                    </div>

                    <div class="form-group" data-bind="with: newQuestion">
                        <label for="inputTitle" class="col-sm-4 control-label">Title</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputTitle" data-bind="value:title" />
                        </div>

                        <label for="inputDescription" class="col-sm-4 control-label">Description</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="inputDescription" data-bind="value:description" />
                        </div>

                        <label for="inputChoice" class="col-sm-4 control-label">Choice</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputChoice" data-bind="value:choice" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>


